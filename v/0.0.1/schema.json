{
  "$id": "https://tokencss.com/schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Token Config",
  "type": "object",
  "properties": {
    "color": {
      "properties": {
        "type": { "enum": ["color"], "default": "color" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/wrappers/color"
      }
    }
  },
  "$defs": {
    "wrappers": {
      "color": {
        "$id": "#/$defs/wrappers/color",
        "if": {
          "not": {
            "value": { "type": "string" }
          }
        },
        "then": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/wrappers/color"
          }
        },
        "else": {
          "$ref": "#/$defs/values/color"
        }
      }
    },
    "values": {
      "color": {
        "$id": "#/$defs/values/color",
        "description": "The value must be a string containing a hex triplet/quartet including the preceding # character",
        "title": "The color value",
        "required": ["value"],
        "properties": {
          "value": {
            "examples": ["#FFF", "#FF0000"],
            "pattern": "^#[0-9a-fA-F]{3,6}",
            "type": "string"
          },
          "extensions": {
            "type": "object"
          }
        },
        "additionalProperties": false
      },
      "cubic-bezier": {
        "$id": "#/$defs/values/cubic-bezier",
        "description": "The value must be a string containing a hex triplet/quartet including the preceding # character",
        "examples": [[0, 0, 0, 1]],
        "title": "The cubic-bezier value",
        "minItems": 4,
        "maxItems": 4,
        "items": {
          "anyOf": [{ "type": "integer" }, { "type": "number" }]
        }
      }
    },
    "tokens": {
      "color": {
        "$id": "#/$defs/tokens/color",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "enum": ["color"], "default": "color" },
          "value": { "$ref": "#/$defs/values/color", "required": true }
        }
      },
      "cubic-bezier": {
        "$id": "#/$defs/tokens/cubic-bezier",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "enum": ["cubic-bezier"], "default": "cubic-bezier" },
          "value": { "$ref": "#/$defs/values/cubic-bezier" }
        }
      }
    }
  }
}
