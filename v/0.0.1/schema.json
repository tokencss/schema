{
  "$id": "https://tokencss.com/schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Token Config",
  "type": "object",
  "properties": {
    "color": {
      "properties": {
        "type": { "const": "color" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/color"
      }
    },
    "space": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "size": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "width": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "height": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "radius": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "shadow": {
      "properties": {
        "type": { "const": "shadow" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/shadow"
      }
    },
    "font": {
      "properties": {
        "type": { "const": "font" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/font"
      }
    },
    "font-size": {
      "properties": {
        "type": { "const": "dimension" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/dimension"
      }
    },
    "timing-function": {
      "properties": {
        "type": { "const": "cubic-bezier" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/cubic-bezier"
      }
    },
    "media": {
      "properties": {
        "type": { "const": "media" }
      },
      "additionalProperties": {
        "$ref": "#/$defs/tokens/media"
      }
    }
  },
  "$defs": {
    "values": {
      "extensions": {
        "$id": "#/$defs/values/extensions",
        "title": "The extensions value",
        "type": "object",
        "properties": {
          "com.tokencss.scale": {
            "enum": ["space", "size", "width", "height", "radius", "font-size"]
          }
        }
      },
      "font": {
        "$id": "#/$defs/values/font",
        "title": "The font value",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "media": {
        "$id": "#/$defs/values/media",
        "title": "A media query value",
        "pattern": "(^\\(.*\\)$|^\\{.*\\}$)"
      },
      "shadow": {
        "$id": "#/$defs/values/shadow",
        "title": "The shadow value",
        "type": "object",
        "properties": {
          "offset-x": { "$ref": "#/$defs/values/dimension" },
          "offset-y": { "$ref": "#/$defs/values/dimension" },
          "blur": { "$ref": "#/$defs/values/dimension" },
          "spread": { "$ref": "#/$defs/values/dimension" },
          "color": { "$ref": "#/$defs/values/color" },
          "opacity": { "$ref": "#/$defs/values/numberClamped" }
        },
        "additionalProperties": false
      },
      "dimension": {
        "$id": "#/$defs/values/dimension",
        "title": "The dimension value",
        "type": "string",
        "pattern": "((px|rem)$|^\\{.*\\})$"
      },
      "color": {
        "$id": "#/$defs/values/color",
        "description": "The value must be a string containing a hex triplet/quartet including the preceding # character",
        "title": "The color value",
        "pattern": "(^#[0-9a-fA-F]{3,6}|^\\{.*\\}$)"
      },
      "cubic-bezier": {
        "$id": "#/$defs/values/cubic-bezier",
        "title": "The cubic-bezier value",
        "minItems": 4,
        "maxItems": 4,
        "items": {
          "$ref": "#/$defs/values/numberClamped"
        }
      },
      "number": {
        "$id": "#/$defs/values/number",
        "title": "The number value",
        "type": "number"
      },
      "numberClamped": {
        "$id": "#/$defs/values/numberClamped",
        "title": "The number value",
        "type": "number",
        "minimum": 0,
        "maximum": 1
      }
    },
    "tokens": {
      "media": {
        "$id": "#/$defs/tokens/media",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "const": "media" },
          "value": { "$ref": "#/$defs/values/media" },
          "extensions": { "type": "object" }
        },
        "additionalProperties": false
      },
      "font": {
        "$id": "#/$defs/tokens/font",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "const": "font" },
          "value": { "$ref": "#/$defs/values/font" },
          "extensions": { "type": "object" }
        },
        "additionalProperties": false
      },
      "color": {
        "$id": "#/$defs/tokens/color",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "consts": "color" },
          "value": { "$ref": "#/$defs/values/color" },
          "extensions": { "type": "object" }
        },
        "additionalProperties": false
      },
      "dimension": {
        "$id": "#/$defs/tokens/dimension",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "const": "dimension" },
          "value": { "$ref": "#/$defs/values/dimension" },
          "extensions": { "$ref": "#/$defs/values/extensions" }
        },
        "additionalProperties": false
      },
      "shadow": {
        "$id": "#/$defs/tokens/shadow",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "const": "shadow" },
          "value": {
            "oneOf": [
              { "$ref": "#/$defs/values/shadow" },
              {
                "type": "array",
                "items": { "$ref": "#/$defs/values/shadow" },
                "minItems": 1,
                "additionalItems": false
              }
            ]
          },
          "extensions": { "type": "object" }
        },
        "additionalProperties": false
      },
      "cubic-bezier": {
        "$id": "#/$defs/tokens/cubic-bezier",
        "type": "object",
        "required": ["value"],
        "properties": {
          "type": { "const": "cubic-bezier" },
          "value": { "$ref": "#/$defs/values/cubic-bezier" },
          "extensions": { "type": "object" }
        }
      },
      "number": {
        "$id": "#/$defs/tokens/number",
        "type": "object",
        "required": ["value"],
        "properties": {
          "value": { "$ref": "#/$defs/values/number" },
          "extensions": { "type": "object" }
        }
      }
    }
  }
}
